<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookmarks</title>
    <link href="/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f583d957c8.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
</head>    
<body>

    <!-- Include Header -->
    <%- include('partials/header', { totalBookmarkedJobs }) %>
    <div class="wrapper">

        <!-- Express-flash messages -->
        <div class="alert-container">
            <% if (success_msg) { %>
                <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        
            <% if (error_msg) { %>
                <div id="danger-alert" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        </div>
    
        <!-- success/danger alerts -->
        <div id="flash-messages" class="mt-3"></div>
    
        <div class="container jobs-container"> 
            <h2 class="bookmarks-page-title">Your Bookmarked Jobs
             </h2>
            <div id="jobs-list" class="row mx-auto">
                <!-- Job cards will be dynamically rendered here -->
            </div>

            <!-- Message for when the user has no saved/bookmarked jobs -->
            <div id="no-bookmarked-jobs-msg" class="no-jobs-message">
                <p>
                    <strong>No bookmarked jobs yet.</strong>  
                    Start saving jobs on your <a href="/dashboard">dashboard</a>, 
                    and they will appear here for easy access.
                </p>
            </div>
        
            <!-- Pagination -->
            <div class="pagination-container text-center my-4"></div>
        </div>
        
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" style="display: none;">
        <div class="spinner-border custom-spinner" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <!-- Link to your external JS file -->
    <script src="/js/bookmarks.js"></script>
    <script src="/js/script.js"></script>

</body>
</html>
