<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookmarks</title>
    <link href="/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f583d957c8.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
</head>    
<body>

    <!-- Include Header -->
    <%- include('partials/header') %>
    <div class="wrapper">

        <!-- Express-flash messages -->
        <div class="alert-container">
            <% if (success_msg) { %>
                <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        
            <% if (error_msg) { %>
                <div id="danger-alert" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        </div>
    
        <!-- success/danger alerts -->
        <div id="flash-messages" class="mt-3"></div>
    
        <div class="container jobs-container"> 
            <h2>Your Bookmarked Jobs: 
                <span class="bookmark-numbers">
                    <%= savedJobs.length %>
                </span>
             </h2>
            <div id="jobs-list" class="row mx-auto">
                <!-- Job cards will be dynamically rendered here -->
            </div>
            <div id="no-jobs-msg">
                <p>No jobs found. You'll see your saves here once you start bookmarking jobs.</p>
            </div>
        
            <!-- Pagination -->
            <div class="pagination-container text-center my-4"></div>
        </div>
        
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" style="display: none;">
        <div class="spinner-border custom-spinner" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <!-- Link to your external JS file -->
    <script src="/js/bookmarks.js"></script>
    <script>
        // Embed server-rendered EJS values into JavaScript variables
        window.jobs = <%- JSON.stringify(jobs) %>;
        window.currentPage = <%= currentPage %>;
        window.savedJobs = <%- JSON.stringify(savedJobs) %>;
    
        // Now you can manipulate `jobs` dynamically
    </script>
    
</body>
</html>
