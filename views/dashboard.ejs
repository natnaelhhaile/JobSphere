<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/f583d957c8.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
</head>    
<body>

    <!-- Include Header -->
    <%- include('partials/header') %>
    <div class="wrapper">
    
        <!-- Express-flash messages -->
        <div class="alert-container">
            <% if (success_msg) { %>
                <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        
            <% if (error_msg) { %>
                <div id="danger-alert" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
                </div>
            <% } %>
        </div>

        <!-- success/danger alerts -->
        <div id="flash-messages" class="mt-3"></div>
    
        <div class="container">
            <!-- Filter buttons -->
            <div class="job-filter btn-group mt-3 ms-auto" style="float: right;">
                <button class="btn btn-all" onclick="filterJobs('all')">
                    All <span class="site-count"></span>
                </button>
                <button class="btn btn-linkedin" onclick="filterJobs('linkedin')">
                    <i class="fab fa-linkedin"></i> LinkedIn <span class="site-count"></span>
                </button>
                <button class="btn btn-indeed" onclick="filterJobs('indeed')">
                    <img src="/images/icons/indeed.png" alt="Indeed" class="icon"> Indeed <span class="site-count"></span>
                </button>
                <button class="btn btn-glassdoor" onclick="filterJobs('glassdoor')">
                    <img src="/images/icons/glassdoor.png" alt="Glassdoor" class="icon"> Glassdoor <span class="site-count"></span>
                </button>
                <button class="btn btn-zip_recruiter" onclick="filterJobs('zip_recruiter')">
                    ZipRecruiter <span class="site-count"></span>
                </button>
                <button class="btn btn-google" onclick="filterJobs('google')">
                    <i class="fab fa-google"></i> Google <span class="site-count"></span>
                </button>
            </div>
        </div>
    
    
        <div class="container jobs-container"> 
            <!-- <h2>Your Recommended Jobs</h2> -->
            <div id="jobs-list" class="row mx-auto">
                <!-- Job cards will be dynamically rendered here -->
            </div>
            <div id="no-jobs-msg">
                <p>No jobs found. Try adjusting the filters or uploading your resume in the profile page.</p>
            </div>
        
            <!-- Pagination -->
            <div class="pagination-container text-center my-4"></div>
        </div>
        
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" style="display: none;">
        <div class="spinner-border custom-spinner" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <!-- Link to your external JS file -->
    <script src="/js/dashboard.js"></script>
</body>
</html>
