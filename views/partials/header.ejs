<header>
    <div class="header-container">
        <!-- Logo -->
        <div class="logo">
            <a href="/dashboard">
                <img src="/images/logo_m.png" alt="Logo" class="logo-img">
            </a>
        </div>

        <!-- Navigation Links (Hidden in mobile, toggled with button) -->
        <nav class="nav-links">
            <a href="/dashboard" class="<%= activePage === 'dashboard' ? 'active' : '' %>">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/bookmarks" class="<%= activePage === 'bookmarks' ? 'active' : '' %>">
                <i class="fas fa-bookmark"></i> Bookmarks
                <span id="bookmarksCounter" class="badge bg-success"><%= totalBookmarkedJobs > 0 ? totalBookmarkedJobs : '' %></span>
            </a>
            <a href="/profile" class="<%= activePage === 'profile' ? 'active' : '' %>">
                <i class="fas fa-user"></i> Profile
            </a>
            <a href="/auth/logout" class="logout-link">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </nav>

        <!-- Mobile Menu Button -->
        <button class="menu-toggle" onclick="toggleMobileMenu()">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</header>
